{
  "name": "hub-halal",
  "version": "0.1.1",
  "description": "Modern Halal Hub - Quran, Prayers, and Islamic Media",
  "main": "dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc --watch -p src/main/tsconfig.json",
    "dev:renderer": "vite",
    "build": "npm run build:release",
    "build:release": "set NODE_ENV=production&& set BUILD_ENV=release&& npm run build:main && npm run build:renderer",
    "build:dev": "set NODE_ENV=development&& npm run build:main && npm run build:renderer:dev",
    "build:main": "tsc -p src/main/tsconfig.json",
    "build:renderer": "vite build",
    "build:renderer:dev": "vite build --mode development",
    "electron": "electron .",
    "start": "npm run build:release && set BUILD_ENV=release&& electron .",
    "pack": "electron-builder --publish=never",
    "dist": "npm run build:release && set BUILD_ENV=release&& electron-builder"
  },
  "dependencies": {
    "@heyputer/puter.js": "^2.2.5",
    "axios": "^1.6.0",
    "electron-updater": "^6.7.3",
    "lucide-react": "^0.303.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "terser": "^5.46.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.hubhalal.app",
    "productName": "Hub Halal",
    "asar": false,
    "files": [
      "dist/**/*",
      "package.json",
      "!**/node_modules"
    ],
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "certificateFile": null,
      "certificatePassword": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Hub Halal"
    },
    "portable": {
      "artifactName": "${productName}-${version}.exe"
    },
    "publish": {
      "provider": "github",
      "owner": "ShadowWLX",
      "repo": "hub-halal"
    }
  }
}
